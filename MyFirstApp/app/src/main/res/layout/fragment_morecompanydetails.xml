<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/ticker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ticker"
        android:gravity="center"
        android:textSize="18pt"/>

    <LinearLayout
        android:id="@+id/top_data_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/ticker">

        <LinearLayout
            android:id="@+id/first_row"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/average_volume"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="9pt"
                android:text="Avg Vol: "/>
            <TextView
                android:id="@+id/week_high"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="9pt"
                android:text="52W High: $"/>

        </LinearLayout>
        <LinearLayout
        android:id="@+id/second_row"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/first_row">

        <TextView
            android:id="@+id/volume"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="9pt"
            android:text="Volume: "/>
        <TextView
            android:id="@+id/week_low"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="9pt"
            android:text="52W Low: $"/>

    </LinearLayout>
        <LinearLayout
        android:id="@+id/third_row"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/second_row">

        <TextView
            android:id="@+id/enterprise_value"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="9pt"
            android:text="EV: $"/>
        <TextView
            android:id="@+id/market_value"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="9pt"
            android:text="Mkt Val: $"/>

    </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_data_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/top_data_info">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="16dp"
            android:text="Financials"
            android:textSize="12pt" />


        <LinearLayout
            android:id="@+id/fourth_row"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/price_earnings"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="9pt"
                android:text="P/E: "/>
            <TextView
                android:id="@+id/earnings_per_share"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="9pt"
                android:text="EPS: $"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/fifth_row"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/fourth_row">

            <TextView
                android:id="@+id/price_revenue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="9pt"
                android:text="P/Rev: "/>
            <TextView
                android:id="@+id/ev_revenue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="9pt"
                android:text="EV/Rev: "/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/sixth_row"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/fifth_row">

            <TextView
                android:id="@+id/price_book"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="9pt"
                android:text="P/Book: "/>
            <TextView
                android:id="@+id/ev_ebitda"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="9pt"
                android:text="EV/EBITDA: "/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/seventh_row"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/sixth_row">

            <TextView
                android:id="@+id/rev_growth"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="9pt"
                android:text="Rev Growth: "/>
            <TextView
                android:id="@+id/revqoq_growth"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="9pt"
                android:text="Rev Q/Q: "/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/eighth_row"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/seventh_row">

            <TextView
                android:id="@+id/total_revenue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="9pt"
                android:text="Total Rev: $"/>
            <TextView
                android:id="@+id/cost_of_revenue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="9pt"
                android:text="Cost of Rev: $"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ninth_row"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/eighth_row">

            <TextView
                android:id="@+id/gross_margin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="9pt"
                android:text="Grs Margin : "/>
            <TextView
                android:id="@+id/operating_margin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="9pt"
                android:text="Opt Margin : "/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>