<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">

        <TextView
            android:id="@+id/each_ticker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:text="TextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/each_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/each_ticker"
            android:text="TextView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/price_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/each_price"
            android:text="TextView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/percent_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/price_change"
            android:text="TextView"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/remove_each_stock"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/delete_button"
            android:text="More Info"
            android:textSize="8sp"
            app:layout_constraintStart_toEndOf="@+id/percent_change"
            android:layout_alignParentRight="true" />


    </RelativeLayout>

    <View
        android:layout_width="280dp"
        android:layout_height="2dp"
        android:layout_marginBottom="1dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:background="@color/FadedGrey"
        app:layout_constraintStart_toStartOf="parent" />

</LinearLayout>